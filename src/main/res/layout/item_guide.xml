<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:padding="@dimen/listview_margin"
>


            <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/imageItem"
                android:src="@drawable/ic_launcher"


                android:scaleType="centerCrop"
                android:alpha=".75"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"

            android:layout_below="@+id/imageItem"
            android:layout_marginTop="@dimen/listview_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textItemTitle"
                android:maxLines="1"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/primary_text_light"
                android:layout_alignRight="@+id/textLanguage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/textDescription"
                android:layout_below="@+id/textItemTitle"
                android:layout_alignParentLeft="true"
                android:textColor="@android:color/secondary_text_light"
                android:maxLines="1"
                android:lines="2"
                android:ellipsize="end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author"
                android:id="@+id/textAuthor"
                android:textColor="@android:color/secondary_text_light"
                android:layout_below="@+id/textDescription"
                android:layout_alignParentLeft="true"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/secondary_text_light"
                android:text="Small Text"
                android:id="@+id/textLanguage"
                android:gravity="right"
                android:layout_below="@+id/textAuthor"
                android:layout_alignParentRight="true"
                android:maxLines="1"/>
        </RelativeLayout>
</RelativeLayout>


